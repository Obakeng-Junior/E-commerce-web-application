@using System.Globalization
@model IEnumerable<DHSOnlineStore.Models.Product>

<form asp-action="Products" class="row row-cols-lg-auto g-3 align-items-center mb-3 px-2">
    <div class="col-12">
        <label class="visually-hidden" for="inlineFormInputGroupUsername">Search title</label>
        <div class="input-group">
            <input type="text" class="form-control" id="sTerm" name="sTerm" placeholder="Search product">
        </div>
    </div>
    
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Search</button>
        <a href="/Product/Products" class="btn btn-dark">Reset</a>
    </div>
</form>

@if (Model.Any())
{
    var groupedProducts = Model.GroupBy(p => p.Category);

    foreach (var group in groupedProducts)
    {
        // Display the category name
        <div class="w-100 mb-4">
            <h2 class="mb-3">@group.Key</h2>
        </div>

        // Display products in this category
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
            @foreach (var product in group)
            {
              <div class="d-flex flex-column">
                <div class="card h-100" style="width: 100%;"> <!-- Added h-100 for full height -->
                    @if (string.IsNullOrEmpty(product.Image))
                    {
                        <img style="width: 100%; height: 180px;" src="/images/default.jpg" class="card-img-top" alt="...">
                    }
                    else
                    {
                        <div class="d-flex justify-content-center">
                            <img class="px-2 py-2" style="width: 280px; height: 280px;" src="/images/@product.Image" class="card-img-top" alt="...">
                        </div>
                    }
                    <div class="card-body d-flex flex-column"> <!-- Flex column for card body -->
                        <p class="card-text mt-auto">
                            <strong>Brand:</strong> @product.Brand <br />
                            <strong>Product:</strong> @product.Name <br />
                            <strong>Price:</strong> @product.Price
                        </p>

                        <div class="mt-auto"> <!-- Pushes buttons to the bottom -->
                            @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                            {
                                @if (product.Quantity > 0)
                                {
                                    <button class="btn btn-primary" onclick="add(@product.Id)">Add To Cart</button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-danger" onclick="alert('Sorry! This item is out of stock.')">No Stock</button>
                                }
                            }
                            else
                            {
                                <button class="btn btn-primary" onclick="alert('You need to sign in to add items to your cart.')">Add To Cart</button>
                            }

                            <a class="btn btn-secondary" asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.Id">View</a>
                        </div>
                    </div>
                 </div>
            </div>

            }
    </div>
    }
}
else
{
    <p>No products available.</p>
}

@section Scripts {
    <script>
        async function add(productId) {
            try {
                var response = await fetch(`/Cart/AddItem?productId=${productId}`);
                if (response.status === 200) {
                    alert("Item successfully added to cart");
                }
            } catch (err) {
                console.error(err);
            }
        }
    </script>
}

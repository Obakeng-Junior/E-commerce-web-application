    </form> *@




    <!-- Main Content -->
    <div class="mt-5">
        <div class="container">
            <main role="main" class="pb-3">
                <div class="my-2">
                    <partial name="_Notifications" />
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <p>&copy; 2024 Dark Hawk Security | All Rights Reserved</p>
            <p><a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> | <a class="text-dark" asp-area="" asp-controller="Terms" asp-action="TermsAndConditions">Terms & conditions</a> | Contact: sanele.mbhele@darkhawk.co.za | Phone: 068 096 4807</p>
        </div>
    </footer>

    <!-- Bootstrap 5 Bundle (includes Bootstrap JS and Popper.js) -->
    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site-specific JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- pdf JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js"></script>

    <!-- Render additional scripts if defined in views -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
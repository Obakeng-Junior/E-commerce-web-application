@{
    var isAboutUsPage = ViewData["Title"]?.ToString() == "About Us";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dark Hawk Security</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- If you have custom styles, ensure the path is correct -->
    <link rel="stylesheet" href="~/css/DHSOnlineStore.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
    <style>
        /* Set background color for body to white */
        body {
            background-color: #ffffff; /* White background */
            color: #000; /* Ensure text color is black for contrast */
        }

        /* Flexbox setup for body to make the footer stay at the bottom */
        html, body {
            height: 100%;
            margin: 0;
        }
        /* Make the navigation bar stick to the top */
       /*  header {
            position: fixed;
            top: 0;
            z-index: 1030; 
            background-color: #2c2c2c; 
            width: 100%;
        } */

        /* Add some space for the content below the sticky navbar */
        /* body {
            padding-top: 70px; 
        } */


        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        /* Update navbar background to white */
        .navbar {
            background-color: #ffffff !important; /* White background for the navbar */
            border-bottom: 1px solid #e5e5e5; /* Optional border for navbar */
        }

        /* Update footer background to white */
        .footer {
            background-color: #ffffff; /* White background for the footer */
            color: #000; /* Ensure footer text is dark for contrast */
        }
    </style>
</head>
<body>
    <!-- Header and Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" >
            <div class="container-fluid px-3">
                <a href="/"><img src="~/images/Logo/onlinestore.jpg" alt="DHS logo" style="width: 100px; height: 100px;" class="me-2"/></a>
                <a href="/"><h4>Dark Hawk Security</h4></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Services
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="StationaryGuards" asp-route-id="1">Stationary Guards </a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="GateGuarding" asp-route-id="2">Gate Guarding</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="CCTVInstallation" asp-route-id="3">CCTV Installation</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="ArmedReaction" asp-route-id="4">Armed Reaction</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="FireEvacuation" asp-route-id="5">Fire Evacuation</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="HealthEmergency" asp-route-id="6">Health Emergency</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="AccessControl" asp-route-id="7">Access Control</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="AlarmInstallation" asp-route-id="8">Alarm Installation</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="CleaningServices" asp-route-id="9">Cleaning Services</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Services" asp-action="ICTServices" asp-route-id="10">ICT Services</a></li>
                            </ul>
                        </li>                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="FAQ" asp-action="Index">FAQs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="Products">Products</a>
                        </li>
                        <!-- Conditional Links based on Role -->
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="GetUserCart">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Index">My Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="GetUserNotifications">Messages  <span class="badge bg-danger">@ViewData["NotificationCount"]</span></a>
                            </li>
                        }

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Service Booking
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="CustomerServiceBooking" asp-action="CreateBooking" asp-route-id="1">Book a Service </a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="CustomerServiceBooking" asp-action="MyBookings" asp-route-id="2">My Bookings</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    My Inquiries
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="CustomerInquiry" asp-action="CreateInquiry" asp-route-id="2">Customer Support</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="CustomerInquiry" asp-action="MyInquiries" asp-route-id="1">My Inquiries </a></li>                                  
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Manage Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Stock" asp-action="Index">Stock</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AllOrders">Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CustomerInquiry" asp-action="ManageInquiries">Inquiries</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CustomerServiceBooking" asp-action="ManageBookings">Bookings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ContactForm" asp-action="Index">Customer Messages</a>
                            </li>
                        }
                    </ul>
                    <!-- Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

@model IEnumerable<DHSOnlineStore.Models.SearchResult>

<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No results found for your search.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Image</th>
                <th>Description</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.Title</td>
                    <td><img src="/images/@result.Image" alt="@result.Title" style="width:100px;height:100px;" /></td>
                    <td>@result.Description</td>
                    <td><a href="@result.Link">View Details</a></td>
                </tr>
            }
        </tbody>
    </table>
}

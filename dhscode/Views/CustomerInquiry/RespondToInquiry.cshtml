@model DHSOnlineStore.Models.CustomerInquiry

<h2>Respond to Inquiry</h2>

<div>
    <strong>Type:</strong> @Model.InquiryType <br />
    <strong>Subject:</strong> @Model.Subject <br />
    <strong>Message:</strong> @Model.Message <br />
    <strong>Date Submitted:</strong> @Model.DateSubmitted.ToShortDateString()
</div>

<hr />

<form asp-action="RespondToInquiry" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="adminResponse">Response</label>
        <textarea name="adminResponse" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit Response</button>
    <a asp-action="ManageInquiries" class="btn btn-secondary mt-2">Cancel</a>
</form>

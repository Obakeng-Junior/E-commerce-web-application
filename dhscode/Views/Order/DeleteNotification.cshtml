@model DHSOnlineStore.Models.Notification

@{
    ViewData["Title"] = "DeleteNotification";
}
<div>
<h1>Delete Notification</h1>

<h4>Are you sure you want to delete this notification?</h4>

    <form asp-action="DeleteNotification">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-action="GetUserNotifications">Back</a>
    </form>
</div>

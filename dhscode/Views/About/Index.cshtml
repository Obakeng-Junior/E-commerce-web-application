@model DHSOnlineStore.Models.AboutViewModel

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-5 fw-bold text-dark">About Us</h1>
        <p class="lead text-muted">@Model.CompanyDescription</p>
    </div>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h3 class="text-dark fw-bold"><i class="fas fa-bullseye text-primary me-2"></i> Mission</h3>
                    <p class="text-muted">@Model.Mission</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h3 class="text-dark fw-bold"><i class="fas fa-eye text-success me-2"></i> Vision</h3>
                    <p class="text-muted">@Model.Vision</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <h3 class="fw-bold text-dark"><i class="fas fa-star text-warning me-2"></i> Our Values</h3>
        <ul class="list-group list-group-flush d-inline-block w-50 mx-auto">
            @foreach (var value in Model.Values)
            {
                <li class="list-group-item text-muted">
                    <i class="fas fa-check-circle text-success me-2"></i> @value
                </li>
            }
        </ul>
    </div>
</div>
